    <!-- Article -->
            <div class="article">
                <h2><span></span><%= article.title %></h2>
                <p class="info noprint">
                    <span class="date"><%= article.created_at.to_date %> @ <%= article.created_at.strftime("%H:%M") %></span>
                    <span class="cat"><%= link_to 'Show', article_path(article),remote: true %></span><span class="noscreen">,</span>
                    <span class="user"><%= article.author %></span><span class="noscreen">,</span>
                    <%if current_user.id == article.created_by %>
                    <span class="cat"><%= link_to 'Edit', edit_article_path(article),remote: true %></span>
                    <%end%>
                    <span class="comments"> Comments(<%= article.comments.count %>)</span>
                </p>

                <p><%= article.body %></p>

                <%#*<p class="btn-more box noprint"><strong><a href="#">Continue</a></strong></p>%>
            </div> <!-- /article -->

            <hr class="noscreen" />



