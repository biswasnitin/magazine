<div class="dialogbox">
  <div class="body">

  

  
    <span class="tip tip-left"></span>
    <div class="message">
      <span>
        <b>  <%= comment.commenter %> </b>:
  <%= comment.body %>
   <%= link_to 'Reply', new_comment_path(:parent_id => comment,:article_id => comment.article_id) %>
  <% if current_user.id == comment.commenter_id %>
  <%= button_to 'Destroy', comment_path(comment),
              method: :delete,
data: { confirm: 'Are you sure?' } %>
  <% end %>
        </span>
  </div>
  </div>
</div>






     



